#!/bin/bash

#################################################################
#---------------------SET ALL VARIABLES-------------------------#
#################################################################

backupDirectory='/mnt/lightning/backup/flash/'
eyeheartpie='/mnt/disks/eyeheartpie-ssh-secure/flash/'
#rebootlabs='/mnt/disks/eyeheartpie-ssh-secure/flash/'
dayscloud=30

#################################################################
#---------------------COPY TO REMOTE 1--------------------------#
#################################################################

  rclone copy -v \
  --fast-list \
  --tpslimit=10 \
  --checkers=4 \
  --transfers=2 \
  ""$backupDirectory""/ eyeheartpie-ssh-secure:flash
  
#################################################################
#---------------------COPY TO REMOTE 2--------------------------#
#################################################################

#  rclone copy -v \
#  --fast-list \
#  --tpslimit=10 \
#  --checkers=4 \
#  --transfers=2 \
#  ""$backupDirectory""/ reboot-ssh-secure:flash

#################################################################
#----------------PRUNE OLD BACKUPS FROM REMOTE 1 ---------------#
#################################################################

find "$eyeheartpie"* -type d -mtime +"$dayscloud" -exec rm -rf {} +

#################################################################
#----------------PRUNE OLD BACKUPS FROM REMOTE 2 ---------------#
#################################################################

#find "$rebootlabs"* -type d -mtime +"$dayscloud" -exec rm -rf {} +

#################################################################
#---------------------------------END---------------------------#
#################################################################
