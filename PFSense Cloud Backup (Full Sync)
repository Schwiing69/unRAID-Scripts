#rebootlabs='/mnt/disks/eyeheartpie-ssh-secure/pfsense/'

#################################################################
#---------------------COPY TO REMOTE 1--------------------------#
#################################################################

  rclone sync -v \
  --fast-list \
  --tpslimit=10 \
  --checkers=4 \
  --transfers=2 \
  ""$backupDirectory""/ eyeheartpie-ssh-secure:pfsense
  
