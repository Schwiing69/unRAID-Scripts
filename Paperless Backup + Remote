#!/bin/bash

#################################################################
#---------------------SET ALL VARIABLES-------------------------#
#################################################################

backupDirectory='/mnt/lightning/backup/paperless/'
remoteDirectory='/mnt/disks/ganymede-ssh-secure/paperless/'

#################################################################
#---------------------PERFORM NEW LOCAL BACKUP------------------#
#################################################################

rsync -a /mnt/user/paperless/ /mnt/lightning/backup/paperless/

#################################################################
#---------------------COPY TO REMOTE----------------------------#
#################################################################

  rclone sync -v \
  --fast-list \
  --tpslimit=10 \
  --checkers=4 \
  --transfers=2 \
  ""$backupDirectory""/ ganymede-ssh-secure:paperless

#################################################################
#---------------------------------END---------------------------#
#################################################################
