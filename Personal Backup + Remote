#!/bin/bash

#################################################################
#---------------------SET ALL VARIABLES-------------------------#
#################################################################

backupDirectory='/mnt/lightning/backup/backup_personal/'
remoteDirectory='/mnt/disks/ganymede-ssh-secure/backup_personal/'

#################################################################
#---------------------PERFORM NEW LOCAL BACKUP------------------#
#################################################################

rsync -a /mnt/user/backup_personal/ /mnt/lightning/backup/backup_personal/

#################################################################
#---------------------COPY TO REMOTE----------------------------#
#################################################################

  rclone sync -v \
  --fast-list \
  --tpslimit=10 \
  --checkers=4 \
  --transfers=2 \
  ""$backupDirectory""/ ganymede-ssh-secure:backup_personal

#################################################################
#---------------------------------END---------------------------#
#################################################################
